{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 80,
    "trailingComma": "es5",
    "singleQuote": false,
    "bracketSpacing": true
  },
  "javascript": {
    "formatter": {
      "enabled": true
    }
  },
  "typescript": {
    "formatter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none"
    }
  },
  "ignore": [
    "node_modules",
    ".next",
    "dist",
    "bun.lockb",
    "build"
  ]
}
